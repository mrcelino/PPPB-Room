<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main Shape Layer with Rounded Corners -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="4dp"> <!-- Offset the shape to create the shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="#C6E7FF" />
            <corners android:radius="16dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>

</layer-list>
